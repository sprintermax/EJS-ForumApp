<!DOCTYPE html>
<html>
    <head>
        <%- include('common/head'); -%>
    </head>
    <body class="text-center">
        <%- include('common/navigation'); -%>
        <h2 class="mb-3 readex font-weight-normal" style="margin-top: 3em">Login</h2>
        <% if (typeof errors !== 'undefined') { %>
			<% for(let i=0; i < errors.length; i++) { %>
				<div class="alert alert-danger" role="alert">
					<%= errors[i].msg %>
				</div>
			<% } %>
		<% } %>
        <div id="signInContainer" class="container">
            <form class="form-signin" action="/login" method="POST">
                <label for="nickName" class="sr-only">Apelido</label>
                <input type="text" class="form-control" id="nickName" name="nickName" placeholder="Apelido" autocomplete="off" required autofocus />
			    <br>
                <label for="password" class="sr-only">Senha</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Senha" required />
			    <br>
                <button type="submit" class="btn btn-light btn-lg btn-block">Entrar</button>
                <p class="mt-5 mb-3 readex">
                    Novo por aqui?
                    <br />
                    <a style="text-decoration: none" href="/signup">Registrar</a>
                </p>
            </form>
        </div>
    </body>
</html>
